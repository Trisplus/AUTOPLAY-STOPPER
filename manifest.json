{
  "manifest_version": 3,
  "name": "Autoplay Control",
  "version": "1.0",
  "description": "Control autoplay settings for media on web pages.",
  "permissions": [
    "tabs",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
